<Window x:Class="Sportics.View.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sportics.View"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        mc:Ignorable="d"
        Title="" Height="200" Width="420">

    <Window.DataContext>
        <vm:MessageViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="380">
            <TextBlock Text="Сообщение" Margin="0,0,0,20" FontSize="22" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding Message}" Margin="0,0,0,30" FontSize="14" HorizontalAlignment="Center"></TextBlock>
            <Button Content="Закрыть" Command="{Binding CloseCommand}" Width="200"></Button>
        </StackPanel>
    </Grid>
</Window>
