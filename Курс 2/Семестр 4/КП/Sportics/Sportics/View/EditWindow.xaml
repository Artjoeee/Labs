<Window x:Class="Sportics.View.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helper="clr-namespace:Sportics.Helper"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        xmlns:local="clr-namespace:Sportics.View"
        mc:Ignorable="d"
        Title="Регистрация" Height="550" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:EditViewModel />
    </Window.DataContext>

    <Window.Resources>
        <helper:ImageSourceConverter x:Key="ImageConverter"/>
    </Window.Resources>

    <Grid Background="WhiteSmoke" Margin="20" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="50,0">
                <TextBlock Text="Редактировать абонемент" FontSize="24" FontWeight="SemiBold" TextAlignment="Center"/>
                <TextBox materialDesign:HintAssist.Hint="Полное название"
                        Text="{Binding FullName, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,20,0,0"/>
                <TextBox materialDesign:HintAssist.Hint="Краткое название"
                        Text="{Binding ShortName, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,20,0,0"/>
                <TextBox materialDesign:HintAssist.Hint="Описание"
                        Text="{Binding Description, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,20,0,0"/>
                <ComboBox materialDesign:HintAssist.Hint="Категория"
                        SelectedValue="{Binding Category, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Content"
                        Margin="0,20,0,0">
                    <ComboBoxItem Content="Фитнес"/>
                    <ComboBoxItem Content="Йога"/>
                    <ComboBoxItem Content="Бассейн"/>
                    <ComboBoxItem Content="Тренажерный зал"/>
                    <ComboBoxItem Content="Танцы"/>
                </ComboBox>

                <TextBox materialDesign:HintAssist.Hint="Цена"
                        Text="{Binding Price, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                        Margin="0,20,0,0"/>

                <TextBox materialDesign:HintAssist.Hint="Длительность (в днях)"
                    Text="{Binding DurationInDays, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,20,0,20"/>
                <Button Content="Выбрать фото" Height="30" Width="150" Command="{Binding SelectPhotoCommand}"></Button>

                <Button Content="Редактировать" Height="35" Margin="0,20,0,0" Command="{Binding EditCommand}" />
            </StackPanel>
            <Image Height="140" Width="250" Stretch="Fill" Margin="5"
        Source="{Binding Membership.Photo, Converter={StaticResource ImageConverter}}"/>
        </StackPanel>
        
    </Grid>
</Window>
