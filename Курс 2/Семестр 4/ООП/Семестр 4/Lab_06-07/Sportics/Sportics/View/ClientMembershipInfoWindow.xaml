<Window x:Class="Sportics.View.ClientMembershipInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helper="clr-namespace:Sportics.Helper"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        xmlns:local="clr-namespace:Sportics.View"
        mc:Ignorable="d"
        MinHeight="550" MinWidth="500"
        Title="" Height="550" Width="500" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <helper:ImageSourceConverter x:Key="ImageConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:ClientMembershipInfoViewModel />
    </Window.DataContext>

    <Grid Background="WhiteSmoke" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="330">
            <Image Height="140" Width="250" Stretch="Fill" Margin="5"
        Source="{Binding Membership.Photo, Converter={StaticResource ImageConverter}}"/>
            <TextBlock Text="{Binding Membership.FullName}" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Membership.ShortName}" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Membership.Category}" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Membership.Description}" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="{Binding Membership.Price, StringFormat=Цена: {0:C}}" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,5"/>
            </StackPanel>
            <Button Content="Купить" Height="30" Width="150" Margin="10" Command="{Binding BuyMembershipCommand}" IsEnabled="{Binding CanBuy}"/>

        </StackPanel>
    </Grid>
</Window>