<Window x:Class="Sportics.View.CoachScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        xmlns:helper="clr-namespace:Sportics.Helper"
        Title="Расписание тренера"
        Height="500" Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <helper:ImageSourceConverter x:Key="ImageConverter"/>
    </Window.Resources>

    <Grid Background="WhiteSmoke" Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CoachSchedules}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="240" Margin="15" Padding="10" BorderBrush="Gray" BorderThickness="1" Background="White">
                            <StackPanel>
                                <TextBlock Text="{Binding Category}" FontWeight="Bold" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="{Binding Date, StringFormat=dd.MM.yyyy}" FontSize="13"/>
                                <TextBlock Text="{Binding Time}" FontSize="13"/>
                                <Button Content="Записаться"
                                        Margin="0,10,0,0"
                                        Command="{Binding DataContext.SignUpCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
