<Window x:Class="Sportics.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svg="http://sharpvectors.codeplex.com/svgc/"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        xmlns:helper="clr-namespace:Sportics.Helper"
        mc:Ignorable="d"
        Title="Sportics"
        MinHeight="500" MinWidth="1160"
        Width="1250" Height="650"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <helper:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <helper:WeeklyOfferButtonTextConverter x:Key="WeeklyOfferButtonTextConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:AdminViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Контент -->
            <RowDefinition Height="Auto"/>
            <!-- Нижняя панель -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="{DynamicResource MaterialDesignPaper}" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Лево: логотип -->
                <ColumnDefinition Width="Auto" />
                <!-- Центр: кнопки -->
                <ColumnDefinition Width="*" />
                <!-- Право: иконки -->
            </Grid.ColumnDefinitions>

            <!-- Левая часть: логотип и название -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="40,0" Grid.Column="0">
                <svg:SvgViewbox Source="/Resources/Images/dumbbell.svg" Height="40" Width="40" />
                <Label Content="SPORTICS" FontSize="24" VerticalAlignment="Center" Margin="10,0"/>
            </StackPanel>

            <!-- Центральная часть: кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                <Button Content="{DynamicResource Memberships}" FontSize="16" Margin="0,0,10,0" Width="150" Command="{Binding OpenMembershipsCommand}"/>
                <Button Content="{DynamicResource Schedule}" FontSize="16" Margin="10,0" Width="150" Command="{Binding OpenSchedulesCommand}"/>
                <Button Content="{DynamicResource Coaches}" FontSize="16" Margin="10,0" Width="150" Command="{Binding OpenCoachesCommand}"/>
            </StackPanel>

            <!-- Правая часть: иконки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Grid.Column="2">
                <ToggleButton Content="🌙"
                        IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                        ToolTip="Тема"
                        Width="40" Height="40"
                        VerticalAlignment="Center"
                        Margin="10,0,10,0"/>

                <Border Background="{DynamicResource MaterialDesignPaper}" Margin="10">
                    <Border.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding OpenAccountCommand}" />
                    </Border.InputBindings>
                    <svg:SvgViewbox Source="Resources\Images\user.svg" Height="30" Width="30"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1" Margin="0">
            <StackPanel Background="{DynamicResource MaterialDesignToolBarBackground}">
                <TabControl SelectedItem="{Binding SelectedTab}" >
                    <TabItem Name="Memberships">
                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource Memberships}" />
                        </TabItem.Header>

                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Command="{Binding DeleteMembershipCommand}"></MenuItem>
                                <MenuItem Header="Редактировать" Command="{Binding EditorCommand}"></MenuItem>
                            </ContextMenu>
                        </TabItem.ContextMenu>

                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Memberships}" SelectedItem="{Binding SelectedMembership, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Полное название" Binding="{Binding FullName}"/>
                                <DataGridTextColumn Header="Сокращенное название" Binding="{Binding ShortName}"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding Category}"/>
                                <DataGridTextColumn Header="Цена" Binding="{Binding Price}"/>
                                <DataGridTextColumn Header="Продолжительность" Binding="{Binding DurationInDays}"/>
                                <DataGridTemplateColumn Header="Предложение недели">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding IsWeeklyOffer, Converter={StaticResource WeeklyOfferButtonTextConverter}}"
                                                    Command="{Binding DataContext.SetAsWeeklyOfferCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="5" />

                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                    </TabItem>

                    <TabItem Name="Сlients">
                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource Clients}" />
                        </TabItem.Header>

                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Изменить статус" Command="{Binding BlockUserCommand}" />
                            </ContextMenu>
                        </TabItem.ContextMenu>


                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Почта" Binding="{Binding Email}"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}"/>
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Name="Coaches">
                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource Coaches}" />
                        </TabItem.Header>

                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Удалить" Command="{Binding DeleteCoachCommand}" />
                                <MenuItem Header="Редактировать" Command="{Binding EditCoachCommand}" />
                            </ContextMenu>
                        </TabItem.ContextMenu>

                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Coaches}" SelectedItem="{Binding SelectedCoach, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                <DataGridTextColumn Header="Имя" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Почта" Binding="{Binding Email}"/>
                                <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}"/>
                                <DataGridTextColumn Header="Специализация" Binding="{Binding Specialization}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Name="Orders">
                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource Orders}" />
                        </TabItem.Header>
                        
                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Отменить заказ" Command="{Binding DeleteOrderCommand}"></MenuItem>
                            </ContextMenu>
                        </TabItem.ContextMenu>

                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding MembershipOrders}" SelectedItem="{Binding SelectedOrder, Mode=TwoWay}" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id заказа" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Название абонемента" Binding="{Binding MembershipName}" />
                                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" />
                                <DataGridTextColumn Header="Id клиента" Binding="{Binding ClientId}" />
                                <DataGridTextColumn Header="Имя клиента" Binding="{Binding ClientName}" />
                                <DataGridTextColumn Header="Дата заказа" Binding="{Binding PurchaseDate, StringFormat='dd.MM.yyyy'}" />
                                <DataGridTextColumn Header="Дата конца действия" Binding="{Binding EndDate, StringFormat='dd.MM.yyyy'}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- Таб для Расписания -->
                    <TabItem Name="Schedule">

                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource Schedule}" />
                        </TabItem.Header>

                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Редактировать" Command="{Binding EditScheduleCommand}" />
                                <MenuItem Header="Удалить" Command="{Binding DeleteScheduleCommand}" />
                            </ContextMenu>
                        </TabItem.ContextMenu>

                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Schedules}" SelectedItem="{Binding SelectedSchedule, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id занятия" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" />
                                <DataGridTextColumn Header="Id тренера" Binding="{Binding CoachId}" />
                                <DataGridTextColumn Header="Имя тренера" Binding="{Binding Coach.Name}" />
                                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat='dd.MM.yyyy'}" />
                                <DataGridTextColumn Header="Время" Binding="{Binding Time}" />
                                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <!-- Таб для Записей Клиентов -->
                    <TabItem Name="SessionRecord">

                        <TabItem.Header>
                            <TextBlock Text="{DynamicResource SessionRecord}" />
                        </TabItem.Header>

                        <TabItem.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Отменить запись" Command="{Binding DeleteClientSessionRecordCommand}" />
                            </ContextMenu>
                        </TabItem.ContextMenu>


                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding ClientSessionRecords}" SelectedItem="{Binding SelectedClientSessionRecord, Mode=TwoWay}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id записи" Binding="{Binding Id}" />
                                <DataGridTextColumn Header="Id клиента" Binding="{Binding ClientId}" />
                                <DataGridTextColumn Header="Имя клиента" Binding="{Binding Client.Name}" />
                                <DataGridTextColumn Header="Id занятия" Binding="{Binding ScheduleId}" />
                                <DataGridTextColumn Header="Категория занятия" Binding="{Binding Schedule.Category}" />
                                <DataGridTextColumn Header="Дата" Binding="{Binding Schedule.Date, StringFormat='dd.MM.yyyy'}" />
                                <DataGridTextColumn Header="Время" Binding="{Binding Schedule.Time}" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>


                </TabControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignPaper}" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,0">
                <svg:SvgViewbox Source="Resources\Images\Mail.svg" Height="20" Width="20" Margin="0,0,5,0"/>
                <Label Content="sportics@gmail.com" VerticalAlignment="Center"/>
                <svg:SvgViewbox Source="Resources\Images\Phone.svg" Height="20" Width="20" Margin="20,0,5,0"/>
                <Label Content="+375 (44) 573-04-02" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
