<Window x:Class="Sportics.View.ClientCoachInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helper="clr-namespace:Sportics.Helper"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        mc:Ignorable="d"
        MinHeight="550" MinWidth="500"
        Title="Информация о тренере" Height="550" Width="500" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <helper:ImageSourceConverter x:Key="ImageConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:ClientCoachInfoViewModel />
    </Window.DataContext>

    <Grid Background="WhiteSmoke" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="330">
            <Image Height="140" Width="250" Stretch="Fill" Margin="5"
                   Source="{Binding Coach.Photo, Converter={StaticResource ImageConverter}}" />
            <TextBlock Text="{Binding Coach.Name}" FontSize="16" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Coach.Specialization}" FontSize="16" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Coach.PhoneNumber}" FontSize="14" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Coach.Email}" FontSize="14" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Coach.Information}" FontSize="14" TextAlignment="Center" Margin="10" TextWrapping="Wrap" />

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button Content="Расписание" Height="30" Width="150" Margin="10" Command="{Binding OpenScheduleCommand}" />
                <Button Content="Отзывы" Height="30" Width="150" Command="{Binding OpenReviewCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
