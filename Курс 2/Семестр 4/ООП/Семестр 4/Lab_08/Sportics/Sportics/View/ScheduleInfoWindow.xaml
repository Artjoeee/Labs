<Window x:Class="Sportics.View.ScheduleInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Sportics.ViewModel"
        mc:Ignorable="d"
        Title="Информация о расписании" Height="400" Width="500" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:ScheduleInfoViewModel />
    </Window.DataContext>

    <Grid Background="WhiteSmoke" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

            <TextBlock Text="{Binding Schedule.Category}" FontSize="18" FontWeight="SemiBold" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="{Binding Schedule.Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" FontSize="16" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Schedule.Time, StringFormat='Время: {0:hh\\:mm}'}" FontSize="16" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Schedule.Status, StringFormat='Статус: {0}'}" FontSize="16" TextAlignment="Center" Margin="0,5"/>
            <TextBlock Text="{Binding Schedule.Coach.Name, StringFormat='Тренер: {0}'}" FontSize="16" TextAlignment="Center" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,20" HorizontalAlignment="Center">
                <Button Content="Удалить" Height="30" Width="150" Margin="10,0" Command="{Binding DeleteScheduleCommand}" />
                <Button Content="Редактировать" Height="30" Width="150" Command="{Binding EditScheduleCommand}" />
            </StackPanel>
            <Button Content="Отзывы" Height="30" Width="150" Margin="10,0" Command="{Binding ReviewScheduleCommand}"/>

        </StackPanel>
    </Grid>
</Window>
